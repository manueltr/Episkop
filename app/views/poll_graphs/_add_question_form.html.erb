<% if form_type == "yes no"%>
    <% poll_questions.each do |poll_question| %>

        <%if poll_question.question_type == "Yes No"%>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="yes_no_<%=poll_question.id%>" value="<%=poll_question.id%>" id="yes_no_check_<%=poll_question.id%>">
                <label class="form-check-label" for="yes_no_check_<%=poll_question.id%>">
                    <%=poll_question.content%>
                </label>
            </div>
        <%end%>

    <% end %>

<% elsif form_type == "multi and yes no" %>

    <% poll_questions.each do |poll_question| %>

        <%if poll_question.question_type == "Yes No" || poll_question.question_type == "Multiple Choice" %>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="multi" value="<%=poll_question.id%>" id="radio_<%= poll_question.id%>" required>
                <label class="form-check-label" for="radio_<%= poll_question.id%>">
                    <%=poll_question.content%>
                </label>
            </div>
        <%end%>

    <% end %>

<% elsif form_type == "input" %>

    <% poll_questions.each do |poll_question| %>

        <%if poll_question.question_type == "Input"%>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="input" value="<%=poll_question.id%>" id="input_<%= poll_question.id%>">
                <label class="form-check-label" for="input_<%= poll_question.id%>">
                    <%=poll_question.content%>
                </label>
            </div>
        <%end%>

    <% end %>
<% end %>
