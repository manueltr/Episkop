<div id="<%= dom_id poll_question %>" class="container">

<div class="row">

  <div class="col">
  <p>
    <% if poll_question.question_type == "Multiple Choice" %>
      <i class="fa fa-question-circle" aria-hidden="true" style="display: inline;"></i>
    <%end%>
    <% if poll_question.question_type == "Input" %>
      <i class="fa fa-comments-o" aria-hidden="true" style="display: inline;"></i>
    <%end%>
    <strong>Content:</strong>
    <%= poll_question.content %> 
  </p>
  </div>
  <div class="col">
    <%= button_to "delete question", poll_question, :method => "delete", :class => "btn btn-primary btn-sm"%>
  </div>

</div>

  <% if poll_question.question_type == "Multiple Choice" %>
    <a class="btn btn-dark btn-sm card-link" data-bs-toggle="collapse" data-bs-target="#poll_answers<%= poll_question.id %>" role="button" aria-expanded="false" aria-controls="poll_answers<%= poll_question.id %>">Show MC Answer Choices</a>
    <div id="poll_answers<%= poll_question.id %>" class="collapse">
          <% poll_question.poll_answers.each do |poll_answer| %>
            <%= render poll_answer %>
          <% end %>
          <div id="create_answer" class="container">
            <a class="new_answer_btn" href="<%= new_poll_answer_path(:poll_id => poll_question.poll_id, :question => poll_question)%>" data-remote="true">Add an MC Answer</a>
          </div>
    </div>
  <%end%>

</div>
