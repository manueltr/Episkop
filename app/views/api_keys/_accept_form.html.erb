<%= form_with(model: api_key) do |form| %>
    <% if api_key.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(api_key.errors.count, "error") %> prohibited this api_key from being saved:</h2>

        <ul>
            <% api_key.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
  
    <div>
        <%= form.label :accepted, 'Accept this key request?' , style: "display: block" %>
        <br>
        <%= form.radio_button :accepted, 't' %> 
        <%= label :accepted_accept, 'Accept' %>
        <br>
        <%= form.radio_button :accepted, 'f', :checked => true %>
        <%= label :accepted_reject, 'Reject' %>
        <br>
        <%= form.check_box :in_req_mode %>
        <%= label :keep_req_mode, 'Keep Request Mode' %>
        <br>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
  