<div class="container">
  <p style="color: green"><%= notice %></p>
</div>
<div class="container mb-5">
  <%= render @poll %>
</div>
<div class="container">
  
  <div id="poll_questions">
    <% @poll_questions.each do |poll_question| %>
    <%= render poll_question %>

    <% end %>
    <button type="button" id="new_question_btn">Add a Question</button>
  </div>
</div>
<div class="container">
  <%= link_to "Back to polls", logged_in_path %>
  <%= button_to "Destroy this poll", @poll, method: :delete %>
</div>
