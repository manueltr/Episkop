<div class="card">
  <div class="card-header" style="background: #212529;"></div>
  <div id="<%= dom_id poll %>" class="card-body">

    <h1 class="card-title"><%= poll.title %></h5>
    <p class="card-text"><%= poll.summary %></p>

    <a class="btn btn-dark btn-sm card-link" data-bs-toggle="collapse" data-bs-target="#collapse<%= poll.id %>" role="button" aria-expanded="false" aria-controls="collapse<%= poll.id%>">Share Poll</a>
      <div id="collapse<%= poll.id %>" class="collapse">
        <div class="card-body mt-4 p-0">

          <div class="invite-box" data-controller="invite">
            <h5 class="mb-1">Invite Link:</h5>
            <input class="poll-url input" id="cb-link-field" type="text" value="<%= form_url(poll.invite_token) %>" data-target="invite.url" data-group-token="<%= poll.invite_token %>" style="width: 40%;"/>
            <div class="card-body__btns mt-2">

              <%# add body to copy link %>
              <%# <button id="copy-btn" class="btn btn-sm btn-dark" data-action="click->invite#copy">Copy Link</button> %>
            </div>
          </div>
          <div class="qr-box">
            <div class="card-body__btns mt-2">
              <h5><a id="qr-btn" href="<%= form_qr_url(poll.invite_token) %>">QR code</a></h5>
            </div>
          </div>
        </div>
      </div>
    

  </div>
</div>
