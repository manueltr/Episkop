<%= form_with(model: poll) do |form| %>
  <% if poll.errors.any? %>
    <div style="color: red">

      <ul>
        <% poll.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title%>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group mt-4">
    <%= form.label :summary%>
    <%= form.text_area :summary, class: "form-control" %>
  </div>

  <div class="form-group form-check mt-4">
    <%= form.check_box :publish, class: "form-check-input", size:"50" %>
    <%= form.label :publish, class: "form-check-label"%>
  </div>

  <div class="form-group mt-4">
    <%= form.label :ends_at%>
      <%= form.datetime_field :ends_at, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-dark mt-4" %>
  </div>

<% end %>
